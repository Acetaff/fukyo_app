<div class="contents row">
  <%= image_tag @fukyo.image.variant(resize: '1000x1000') %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <% if user_signed_in? && current_user.id == @fukyo.user_id %>
      <ul class="more_list">
        <li>
          <%= link_to '>編集する', edit_fukyo_path(@fukyo.id), method: :get %>
        </li>
        <li>
          <%= link_to '>削除する', fukyo_path(@fukyo.id), method: :delete %>
        </li>
      </ul>
      <% end %>
    </div>
    <p>＃： <%= @fukyo.title %></p>
    <span class="name">＃： <%= @fukyo.f_text %>
    </span>
    <div>＃： <%= @fukyo.f_url%></div>
  </div>
    <div class="container">
    <% if user_signed_in? %>
      <%= form_with(model: [@fukyo, @comment], local: true) do |f| %>
        <%= f.text_area :c_text, placeholder: "節度を守って、コメントしてみよう！", rows: "2" %>
        <%= f.submit "コメントする" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>
        <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.fukyo_sya, "/users/#{comment.user_id}" %>：</strong>
          <%= comment.c_text %>
        </p>
      <% end %>
    </div>
  </div>
</div>