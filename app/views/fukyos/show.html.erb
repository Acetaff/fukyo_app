<div class="contents row">
  <%= image_tag @fukyo.image.variant(resize: '1000x1000') %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <% if user_signed_in? && current_user.id == @fukyo.user_id %>
      <ul class="more_list">
        <li>
          <%= link_to '>編集する', "#", method: :get %>
        </li>
        <li>
          <%= link_to '>削除する', "#", method: :delete %>
        </li>
      </ul>
      <% end %>
    </div>
    <p>＃お題： <%= @fukyo.title %></p>
    <span class="name">-紹介文： <%= @fukyo.f_text %>
    </span>
    <div>-関連URL： <%= @fukyo.f_url%></div>
  </div>
</div>